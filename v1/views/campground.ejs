<% include partials/header %>


<div class= "container">
    <header class= "jumbotron">
        <div>
            <h1>Welcome to Campground.</h1>
            <p>
               <a class="btn btn-primary btn-large" href= "/campground/new">Add new campground</a>
             </p>
        </div>
    </header>


<div class= "row text-center" style = "display:flex; flex-wrap: wrap;">
    <% campground.forEach(function(cam){%>

        <div class="col-3">
            <div class="img-thumbnail">
                <img  class="img-fluid" src= "<%= cam.image%>">
                <div class= "caption">
                    <h3 style =" word-wrap: break-word;
     -webkit-hyphens: auto;
     -moz-hyphens: auto;
     -ms-hyphens: auto;
     -o-hyphens: auto;
     hyphens: auto;"><%= cam.name%></h3>
                </div>
            </div>
            
        </div>
    
<%});%>
</div>




</div>





<% include partials/footer%>